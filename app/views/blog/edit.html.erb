<h3> Edit Blog Post </h3>

<%= form_with model: @blog, url: "blogs/#{@blog.id}", method: 'patch' do |form| %>

  <%= form.label :title %>
  <%= form.text_field :title %>
  <br>
  <br>
  <%= form.label :content %>
  <%= form.text_field :content %>
  <br>
  <br>
  <%= form.submit 'Edit Blog Post' %>
<% end %>
<br>
<%= link_to 'Return to Home', blogs_path %>